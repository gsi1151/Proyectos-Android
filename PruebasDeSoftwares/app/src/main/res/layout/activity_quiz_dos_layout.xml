<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.QuizActivityDos"
    android:background="@drawable/black_gradient">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/textViewUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textColor="@color/colorBlanco"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/radioGroupUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlanco"
            android:buttonTint="@color/colorAzulAgua"
            android:layout_weight="0.04" >
            <RadioButton
                android:id="@+id/radioCero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="@color/colorBlanco"
                android:text="RadioButton"
                android:buttonTint="@color/colorAzulAgua"
                android:background="@color/colorPrimary"
                />
            <RadioButton
                android:id="@+id/radioUno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlanco"
                android:buttonTint="@color/colorAzulAgua"
                android:backgroundTint="@color/colorAzulAgua"
                android:background="@color/colorPrimary"
                android:text="RadioButton"
                />
            <RadioButton
                android:id="@+id/radioDos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlanco"
                android:buttonTint="@color/colorAzulAgua"
                android:backgroundTint="@color/colorAzulAgua"
                android:background="@color/colorPrimary"
                android:text="RadioButton" />
        </RadioGroup>



        <Button
            android:id="@+id/buttonUno"
            android:background="@drawable/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlanco"
            android:text="@string/str_next" />
    </LinearLayout>

</RelativeLayout>